@{
    ViewData["Title"] = "Home Page";
}


<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <form asp-controller="Home" asp-action="Form01Handle" method="post">
    <fieldset>
        <legend><i>Contact Infomation</i></legend>
            First name: <input type="text" id="fname" name="fname"><br>
            Last name: <input type="text" id="lname" name="lname"><br>
            E-mail: <input type="text" id="email" name="email"><br>
    </fieldset>
    <fieldset>
        <legend><i>Competition Question</i></legend>
            How tall is the Eiffel Tower in Paris, France?<br>
            <input type="radio" name="eiffelTowerHeight" value="584ft">584ft
            <br>
            <input type="radio" name="eiffelTowerHeight" value="784ft">784ft
            <br>
            <input type="radio" name="eiffelTowerHeight" value="984ft">984ft
            <br>
            <input type="radio" name="eiffelTowerHeight" value="1184ft">1184ft
    </fieldset>
    <fieldset>
        <legend><i>Tiebreaker Question</i></legend>
            In 25 words or less, say why you would like to win $10,000:<br>
            <textarea cols="30" rows="10" name="tiebreakerAnswer"></textarea>
    </fieldset>
    <fieldset>
        <legend><i>Enter competition</i></legend>
        <button type="submit">Enter Competition</button>
    </fieldset>
    </form>
</body>
